+#if defined(USE_GIO)
+  if (sandbox::FlatpakSandbox::GetInstance()->GetSandboxLevel() >
+      sandbox::FlatpakSandbox::SandboxLevel::kNone) {
+    resolver->reset(new ProxyResolverLinuxImplPortal());
+    return OK;
+  }
+#endif
+  return ERR_NOT_IMPLEMENTED;
+}
